<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Alipay Configuration reader -->
    <virtualType name="FrontendGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Antom\Frontend\Model\Ui\ConfigProvider::ALIPAY_CODE</argument>
        </arguments>
    </virtualType>

    <!-- Credit Card Configuration reader -->
    <virtualType name="CardGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Antom\Frontend\Model\Ui\ConfigProvider::CARD_CODE</argument>
        </arguments>
    </virtualType>

    <!-- Credit Card Info Block -->
    <type name="Antom\Frontend\Block\CardInfo">
        <arguments>
            <argument name="config" xsi:type="object">CardGatewayConfig</argument>
        </arguments>
    </type>

    <type name="Antom\Frontend\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">FrontendGatewayConfig</argument>
        </arguments>
    </type>
</config>
